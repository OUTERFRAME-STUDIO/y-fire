{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": false,
    // Generate d.ts files
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "declarationMap": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution":"Node",
    "target": "ES6"
  },
}